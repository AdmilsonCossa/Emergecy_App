<h1>Login</h1>


<%= simple_form_for(@user_session, :html => {:class => 'form-horizontal' }) do |f|  %>

  <%= f.error_notification %>
  <%= display_base_errors @user_session %>

  <%= f.input :username, wrapper_html: { class: 'username' } %>
  <%= f.input :password, wrapper_html: { id: 'password' } %>
  <%= f.input :remember_me, as: :boolean, inline_label: 'Remember me', label: false %>
  <%= f.button :submit %>

<% end %>
<p>
if u dont have an account  click on sign up </br >
<%= link_to 'Sign up', new_user_path %> 