<h1>Login</h1>


<%= simple_form_for(@user_session, :html => {:class => 'form-horizontal' }) do |f|  %>

  <%= f.error_notification %>
  <%= display_base_errors @user_session %>

<div class="formList">


  <%= f.label :username, "Username" %> </br >

  <%= f.text_field :username %>
</div>

<div>
  <%= f.label :password, "Password" %> </br >

  <%= f.password_field :password %>
</div>


<div>
<p>
  <%= f.submit "Sign in", :class => "btn btn-info" %>

</ div>

<% end %>
<p>
