	<%= simple_form_for(@user, :html => {:class => 'form-horizontal' }) do |f| %>

	  <%= f.error_notification %>
 	  <%= display_base_errors @user %>

	
		<%= f.input :username %>
		<%= f.input :email %>
		<%= f.input :password %>
		<%= f.input :password_confirmation %>
		<%= f.submit "Sign up" %>
	<% end %> 