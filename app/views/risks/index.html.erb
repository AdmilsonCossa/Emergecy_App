    <%= render 'layouts/risks' %>

    <h1>Listing risks</h1>
    <hr>
    
    <div>
        <%= form_tag risks_url, :method => :get do %>
        <%= text_field_tag :search_term, params[:search_term] %>
        <%= submit_tag "Search" %>
    <% end %>
    </div>
<table >
    
    <tr>
        <th>Location</th>
        <th>Type</th>
        <th>Description</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <%  @risks.each do |risk|    %>
      <tr>
      <td><%= risk.location.name if risk.location %></td>
        <td><%= risk.type.name if risk.type %></td>
        <td><%= risk.description %></td>
        
        <td><%= link_to 'Show', risk %></td>
        <td><%= link_to 'Edit', edit_risk_path(risk) %></td>
        <td><%= link_to 'Destroy', risk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table><br />
   <%= link_to 'New Risk', new_risk_path %>
