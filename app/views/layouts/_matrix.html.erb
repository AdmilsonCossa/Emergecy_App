<table  class="table table-striped table-bordered table-condensed" border = "1" >
    <tr>
      <td > </td>
    <%  @impacts.each do |a| %>
          <td> <%= a %> </td>
    <% end %>
    </tr>  
      <%  @probabilities.each  do |i| %>   
        <tr>
          <td> <%= i %> </td>
          <%  @impacts.each do |a| %>
             <td>
             <%  @periods.each do |p|  %>                 
                <% if (p.impact == a and p.probability == i ) %> 
                  <%= "R #{ p.risk_id}" %>
                <% end %>
             <% end %>
             </td>
          <% end %>
        </tr>
      <% end %>

</table>