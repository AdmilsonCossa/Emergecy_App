<h1>Listing periods</h1>

<table  class="table table-striped table-bordered table-condensed">
  <tr>
    <th>From date</th>
    <th>End date</th>
    <th>Probability</th>
    <th>Impact</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @periods.each do |period| %>
  <tr>
    <td><%= period.from_date %></td>
    <td><%= period.end_date %></td>
    <td><%= period.probability %></td>
    <td><%= period.impact %></td>
    <td><%= link_to 'Show', period %></td>
    <td><%= link_to 'Edit', edit_period_path(period) %></td>
    <td><%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
